{
  "hooks": {
    "PSTMSG": {
      "function": [
        "window.postMessage"
      ],
      "event": [
        "message"
      ]
    }
  },
  "config": {
    "message": {
      "alert": {
        "match": [
          ".match",
          ".indexOf",
          ".endsWith",
          ".includes",
          ".replace",
          ".startsWith",
          ".innerHTML",
          ".outerHTML",
          "postMessage",
          "opener",
          "eval"
        ],
        "notification": true
      }
    }
  }
}