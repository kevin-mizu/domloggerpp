{
  "hooks": {
    "PSTMSG": {
      "function": [
        "window.postMessage"
      ],
      "event": [
        "message"
      ]
    }
  },
  "config": {
    "window.postMessage": {
      "beforeEnter": "console.log(`%c?%c→%c${domlogger.utils.getWindowContext(this)}%c→%c${args[1]||'null'}%c ${domlogger.utils.stringify(args[0])}`, 'color: red', '', 'color: green', '', 'color: blue', ''); return args"
    },
    "message": {
      "alert": {
        "match": [
          ".match",
          ".indexOf",
          ".endsWith",
          ".includes",
          ".replace",
          ".startsWith",
          ".innerHTML",
          ".outerHTML",
          "postMessage",
          "opener",
          "eval"
        ],
        "notification": true
      }
    }
  }
}